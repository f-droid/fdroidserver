if config['arch64']:
    cachefiles.extend([
        ('android-ndk-r10e-linux-x86_64.bin',
         'https://dl.google.com/android/ndk/android-ndk-r10e-linux-x86_64.bin',
         '102d6723f67ff1384330d12c45854315d6452d6510286f4e5891e00a5a8f1d5a'),
